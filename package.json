{
  "name": "astrochain",
  "version": "1.0.0",
  "description": "A blockchain-based platform for managing asteroid mining operations and resource distribution.",
  "main": "index.js",
  "scripts": {
    "test": "hardhat test",
    "test:unit": "hardhat test tests/unit",
    "test:integration": "hardhat test tests/integration",
    "compile": "hardhat compile",
    "deploy": "hardhat run scripts/deploy.js",
    "start": "node index.js",
    "lint": "eslint .",
    "format": "prettier --write '**/*.{js,json,md}'"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "smart-contracts",
    "asteroid-mining",
    "resource-distribution"
  ],
  "author": "KOSASIH",
  "license": "Apache 2.0",
  "dependencies": {
    "dotenv": "^10.0.0",
    "ethers": "^5.4.0",
    "express": "^4.17.1",
    "web3": "^1.5.2"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "hardhat": "^2.6.4",
    "mocha": "^9.1.3",
    "prettier": "^2.4.1"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 12
    },
    "rules": {
      "no-console": "warn",
      "indent": ["error", 2],
      "quotes": ["error", "single"],
      "semi": ["error", "always"]
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 80
  }
}
